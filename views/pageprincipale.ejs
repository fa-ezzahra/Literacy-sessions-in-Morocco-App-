  <script>
  function renderSchedule(schedule) {
      const container = document.getElementById('schedule-container');
      container.innerHTML = '';

      const groups = Array.from(new Set(schedule.map(item => item.group)));

      groups.forEach(group => {
        const groupSchedule = schedule.filter(item => item.group === group);
        const groupDiv = document.createElement('div');
        groupDiv.classList.add('class');

        const enteteDiv = document.createElement('div');
        enteteDiv.classList.add('entete2');
        enteteDiv.innerHTML = `<span>${group}</span>`;
        groupDiv.appendChild(enteteDiv);

        const tableDiv = document.createElement('div');
        tableDiv.classList.add('table-class');

        const arabeDiv = document.createElement('div');
        arabeDiv.classList.add('colonne_arabe');
        arabeDiv.innerHTML = '<h2>ARABE</h2>';

        const mathDiv = document.createElement('div');
        mathDiv.classList.add('colonne_math');
        mathDiv.innerHTML = '<h2>Math</h2>';

        groupSchedule.forEach(session => {
          const sessionDiv = document.createElement('div');
          sessionDiv.classList.add('tdc_container');
          sessionDiv.innerHTML = `<span>${session.time}</span><br>
                                  <span>${session.day}</span><br>
                                  <span>salle ${session.classroom}</span>`;
          if (session.subject === 'Arab') {
            arabeDiv.appendChild(sessionDiv);
          } else {
            mathDiv.appendChild(sessionDiv);
          }
        });

        tableDiv.appendChild(arabeDiv);
        tableDiv.appendChild(document.createElement('div')).classList.add('line');
        tableDiv.appendChild(mathDiv);
        groupDiv.appendChild(tableDiv);
        container.appendChild(groupDiv);
      });
    }

    // Fetch the timetable data from the server
    fetch('/timetable/your-centre-name') // replace with the actual centre name
      .then(response => response.json())
      .then(data => {
        renderSchedule(data);
      })
      .catch(error => console.error('Error fetching timetable:', error));

  </script>
